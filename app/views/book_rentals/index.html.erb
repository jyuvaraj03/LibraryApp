<div class="flex justify-between mb-2">
  <div class="text-5xl font-black mb-4">Book Rentals</div>
  <div>
    <button class="rounded-md py-2 px-4 text-lg text-gray-500 border border-gray-400 font-semibold">
      <%= link_to "+ New Rental", new_book_rental_path %>
    </button>
  </div>
</div>

<div class="my-4">
  <%= form_with url: book_rentals_path, method: :get, data: { controller: 'search-form', search_form_target: 'form' } do |f| %>
    <div class="flex flex-row gap-2">
      <%= f.search_field :search, {
        placeholder: 'Search by book or member name',
        value: params.dig(:search),
        class: "shadow border px-4 py-2 w-full rounded",
        data: { search_form_target: 'text' }
      } %>
      <%= f.submit "Search", class: "btn-primary" %>
      <%= button_tag "Reset", type: :reset, data: { action: 'search-form#reset' }, class: "btn-secondary" %>
    </div>
    <div class="p-3">
      <%= f.check_box :only_current, {
        class: 'mr-1',
        include_hidden: false,
        checked: params.dig(:only_current) == 'true',
        onchange: ("this.form.submit()")
      }, 'true', 'false' %>
      <%= f.label :only_current, 'Show only currently rented', class: 'text-gray-700' %>
    </div>
  <% end %>
</div>

<div class="overflow-x-auto">
  <table class="index-table">
    <thead>
    <tr>
      <th>Issue ID</th>
      <th>Book</th>
      <th>Member</th>
      <th>Issued On</th>
      <th>Returned On</th>
    </tr>
    </thead>
    <tbody>
    <% @book_rentals.each do |book_rental| %>
      <tr>
        <td><%= book_rental.id %></td>
        <td><%= book_rental.borrowed_book %></td>
        <td><%= book_rental.borrower %></td>
        <td><%= book_rental.issued_on&.to_formatted_s(:long) %></td>
        <td><%= book_rental.returned_on&.to_formatted_s(:long) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= render partial: 'shared/pagination_bar', locals: { pagy: @pagy } %>
