<p class="text-5xl mb-4">Book Rentals</p>

<div class="flex justify-end mb-2">
  <button class="bg-blue-500 rounded-md py-2 px-4 text-lg text-white">
    <%= link_to "+ New Rental",  new_book_rental_path %>
  </button>
</div>

<div class="overflow-x-auto">
  <table class="w-full table-auto rounded-md box-border">
    <thead>
    <tr class="bg-gray-100">
      <th class="p-4">Issue ID</th>
      <th class="p-4">Book</th>
      <th class="p-4">Member</th>
      <th class="p-4">Issued On</th>
      <th class="p-4">Returned On</th>
    </tr>
    </thead>
    <tbody>
    <% @book_rentals.each do |book_rental| %>
      <tr>
        <td class="text-center p-2"><%= book_rental.id %></td>
        <td class="text-center p-2"><%= book_rental.borrowed_book %></td>
        <td class="text-center p-2"><%= book_rental.borrower %></td>
        <td class="text-center p-2"><%= book_rental.issued_on %></td>
        <td class="text-center p-2"><%= book_rental.returned_on %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
