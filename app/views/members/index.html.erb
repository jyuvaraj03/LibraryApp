
<div class="flex justify-between mb-2">
  <div class="text-5xl font-black mb-4">Members</div>
  <div>
    <button class="rounded-md py-2 px-4 text-lg text-gray-500 border border-gray-400 font-semibold">
      <%= link_to "+ New Member", new_member_path %>
    </button>
  </div>
</div>
<div class="my-4">
  <%= form_with url: members_path, method: :get, class: "flex flex-row gap-2", data: { controller: 'search-form', search_form_target: 'form' } do |f| %>
    <%= f.search_field :search, {
      placeholder: 'Search by name, ID or personal number',
      value: params.dig(:search),
      class: "shadow border px-4 py-2 w-full rounded",
      data: { search_form_target: 'text' }
    } %>
    <%= f.submit "Search", class: "btn-primary" %>
    <%= button_tag "Reset", type: :reset, data: { action: 'search-form#reset' }, class: "btn-secondary" %>
  <% end %>
</div>

<div class="overflow-x-auto">
  <table class="index-table">
    <thead>
    <tr>
      <th>Member ID</th>
      <th>Name</th>
      <th>Personal Number</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Father's Name</th>
      <th>Date of Birth</th>
      <th>Date of Retirement</th>
    </tr>
    </thead>
    <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.name %></td>
        <td><%= member.personal_number %></td>
        <td><%= member.email %></td>
        <td><%= member.phone %></td>
        <td><%= member.father_name %></td>
        <td><%= member.date_of_birth&.to_formatted_s(:long) %></td>
        <td><%= member.date_of_retirement&.to_formatted_s(:long) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= render partial: 'shared/pagination_bar', locals: { pagy: @pagy } %>
