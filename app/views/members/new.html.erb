<div class="flex justify-center">
  <div class="w-1/2 flex justify-center">
    <%= form_with(model: @member, local: true, class: "flex flex-col w-full bg-white shadow-md border rounded-md p-12") do |f| %>
      <p class="text-4xl font-black mb-6">Create Member</p>
      <%= render 'shared/form_error_messages' %>
      <div class="flex flex-col mb-6">
        <%= f.label :name, class: "block mb-2 font-medium required-field-label" %>
        <%= f.text_field :name, required: true, placeholder: "Abdul Kalam", class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :personal_number, class: "block mb-2 font-medium required-field-label" %>
        <%= f.text_field :personal_number, required: true, placeholder: "8409", class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :email, class: "block mb-2 font-medium" %>
        <%= f.email_field :email, placeholder: "abdulkalam@example.com", class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :phone, 'Phone number', class: "block mb-2 font-medium" %>
        <%= f.text_field :phone, placeholder: "9876543210", class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :father_name, class: "block mb-2 font-medium" %>
        <%= f.text_field :father_name, placeholder: "Jainulabiddin Marakayar", class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :date_of_birth, class: "block mb-2 font-medium" %>
        <%= f.date_field :date_of_birth, max: Date.today, class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :date_of_retirement, class: "block mb-2 font-medium" %>
        <%= f.date_field :date_of_retirement, min: Date.today, class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <%= f.submit "Create", class: "bg-blue-500 rounded-md py-2 px-4 text-lg text-white font-extrabold" %>
    <% end %>
  </div>
</div>
