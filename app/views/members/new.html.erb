<div class="flex justify-center">
  <div class="w-2/3 flex justify-center">
    <%= form_with(model: @member, local: true, class: "flex flex-col w-full bg-white shadow-md border rounded-md p-12") do |f| %>
      <p class="text-4xl font-black mb-6"><%= t('create_member') %></p>
      <%= render 'shared/form_error_messages' %>
      <%= member_form_field(f, :name, :text_field, required: true, placeholder: t('member_name_placeholder')) %>
      <%= member_form_field(f, :personal_number, :text_field, required: true, placeholder: t('member_personal_id_placeholder')) %>
      <%= member_form_field(f, :phone, :text_field, label_text: t('phone_number_label'), placeholder: t('member_phone_placeholder')) %>
      <%= member_form_field(f, :email, :email_field, placeholder: t('member_email_placeholder')) %>
      <%= member_form_field(f, :date_of_birth, :date_field, max: Date.today) %>
      <%= member_form_field(f, :date_of_retirement, :date_field, min: Date.today) %>
      <%= f.submit t('create'), class: "btn-primary" %>
    <% end %>
  </div>
</div>
