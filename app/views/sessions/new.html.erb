<div class="w-full flex justify-center align-center">
  <%= form_with(url: login_path, scope: :session, local: true, class: "flex flex-col w-1/3 bg-white shadow-md border rounded-md p-12") do |f| %>
    <p class="text-4xl font-black mb-4 text-center">Login</p>
    <%= render 'shared/form_error_messages' %>
    <div class="flex flex-col mb-6">
      <%= f.label :username, class: "block mb-2 font-medium required-field-label" %>
      <%= f.text_field :username, required: true, placeholder: "Enter username", class: "shadow border px-4 py-2 w-full rounded" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :password, class: "block mb-2 font-medium required-field-label" %>
      <%= f.password_field :password, required: true, placeholder: "Enter password", class: "shadow border px-4 py-2 w-full rounded" %>
    </div>
    <%= f.submit "Log In", class: "cursor-pointer bg-blue-500 hover:bg-blue-600 rounded-md py-2 px-4 text-lg text-white font-extrabold" %>
  <% end %>
</div>
