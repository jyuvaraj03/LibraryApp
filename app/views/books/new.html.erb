<div class="flex justify-center">
  <div class="w-2/3 flex justify-center">
    <%= form_with(model: @book, local: true, class: "flex flex-col w-full bg-white shadow-md border rounded-md p-12") do |f| %>
      <p class="text-4xl font-black mb-4"><%= t('create_book') %></p>
      <%= render 'shared/form_error_messages' %>
      <div class="flex flex-col mb-6">
        <%= f.label :custom_number, t('custom_number'), class: "block mb-2 font-medium required-field-label" %>
        <%= f.text_field :custom_number, required: true, placeholder: t('book_custom_number_placeholder'), class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :name, t('name_label'), class: "block mb-2 font-medium required-field-label" %>
        <%= f.text_field :name, required: true, placeholder: t('book_name_placeholder'), class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :author_name, t('author_name_label'), class: "block mb-2 font-medium required-field-label" %>
        <%= f.text_field :author_name, required: true, placeholder: t('book_author_placeholder'), class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :publisher_name, t('publisher_name_label'), class: "block mb-2 font-medium" %>
        <%= f.text_field :publisher_name, placeholder: t('book_publisher_placeholder'), class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :publishing_year, t('publishing_year_label'), class: "block mb-2 font-medium" %>
        <%= f.text_field :publishing_year, placeholder: t('book_publishing_year_placeholder'), class: "shadow border px-4 py-2 w-full rounded" %>
      </div>
      <div class="flex flex-col mb-6">
        <%= f.label :category_names, t('category_names_label'), class: "block mb-2 font-medium" %>
        <%= f.text_field :category_names, placeholder: t('book_categories_placeholder'), class: "shadow border px-4 py-2 w-full rounded" %>
        <small class="p-1 text-gray-400"><%= t('comma_separated') %></small>
      </div>
      <%= f.submit t('create'), class: "btn-primary" %>
    <% end %>
  </div>
</div>
