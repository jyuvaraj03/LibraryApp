
<div class="w-full flex justify-center">
  <%= form_with(model: @book, local: true, class: "flex flex-col w-full bg-white shadow-md border rounded-md p-12") do |f| %>
    <p class="text-4xl font-black mb-4">Create Book</p>
    <%= render 'shared/form_error_messages' %>
    <div class="flex flex-col mb-6">
      <%= f.label :name, class: "block mb-2 font-medium required-field-label" %>
      <%= f.text_field :name, required: true, placeholder: "Animal Farm", class: "shadow border px-4 py-2 w-full rounded" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :author_name, class: "block mb-2 font-medium required-field-label" %>
      <%= f.text_field :author_name, required: true, placeholder: "George Orwell", class: "shadow border px-4 py-2 w-full rounded" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :publisher_name, class: "block mb-2 font-medium" %>
      <%= f.text_field :publisher_name, placeholder: "Secker and Warburg", class: "shadow border px-4 py-2 w-full rounded" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :publishing_year, class: "block mb-2 font-medium" %>
      <%= f.text_field :publishing_year, placeholder: "1945", class: "shadow border px-4 py-2 w-full rounded" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :category_names, class: "block mb-2 font-medium" %>
      <%= f.text_field :category_names, placeholder: "Satire, Political", class: "shadow border px-4 py-2 w-full rounded" %>
      <small class="p-1 text-gray-400">Comma-separated</small>
    </div>
    <%= f.submit "Create", class: "bg-blue-500 rounded-md py-2 px-4 text-lg text-white font-extrabold" %>
  <% end %>
</div>