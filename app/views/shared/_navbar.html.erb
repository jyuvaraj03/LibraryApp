<div class="w-full px-4 md:px-12 py-4 shadow-md">
  <div class="flex justify-between items-center">
    <a href="#" class="font-black text-3xl text-blue-500">Muthamizh Mandram</a>
    <nav class="flex flex-row items-center">
      <%= link_to "Books", books_path, class: "ml-8 text-md font-semibold" %>
      <%= link_to "Create Book", books_new_path, class: "ml-8 text-md font-semibold" %>
      <% if logged_in? %>
        <%= link_to "Log Out", logout_path, method: :delete, class: "ml-8 text-md font-semibold" %>
